{
  "repository": "@talend/design-tokens",
  "head": "specify/chore/tokens",
  "rules": [
    {
      "name": "Design Tokens / Colors",
      "path": "src/themes/scss/colors.css",
      "filter": {
        "types": ["color", "gradient", "textStyle", "font"]
      },
      "parsers": [
        {
          "name": "to-css-custom-properties",
          "options": {
            "formatTokens": {
              "color": "hsl"
            }
          }
        }
      ]
    }
  ]
}
