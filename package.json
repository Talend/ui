{
  "devDependencies": {
    "commander": "^2.9.0",
    "cpx": "^1.5.0",
    "lerna": "2.0.0-beta.32",
    "npm-watch": "^0.1.8"
  },
  "scripts": {
    "postinstall": "lerna exec -- yarn && ./copylib.js",
    "build": "lerna exec --ignore=generator-talend -- yarn run prepublish && ./copylib.js",
    "build-cmf": "lerna exec --scope=*cmf -- yarn run prepublish && ./copylib.js --scope=cmf",
    "build-components": "lerna exec --scope=*components -- yarn run prepublish && ./copylib.js --scope=components",
    "build-containers": "lerna exec --scope=*containers -- yarn run prepublish && ./copylib.js --scope=containers",
    "build-forms": "lerna exec --scope=*forms -- yarn run prepublish && ./copylib.js --scope=forms",
    "build-icons": "lerna exec --scope=*icons -- yarn run prepublish && ./copylib.js --scope=icons",
    "build-theme": "lerna exec --scope=*theme -- yarn run prepublish && ./copylib.js --scope=theme",
    "update-icons": "lerna exec --scope=*components -- yarn test -- -u",
    "test": "lerna run test",
    "watch": "npm-watch"
  },
  "watch": {
    "build-cmf": {
      "patterns": [
        "packages/cmf/src/**/*"
      ],
      "extensions": "js"
    },
    "build-components": {
      "patterns": [
        "packages/components/src/**/*"
      ],
      "extensions": "js,css,scss,svg"
    },
    "build-containers": {
      "patterns": [
        "packages/containers/src/**/*"
      ],
      "extensions": "js,css,scss,svg"
    },
    "build-forms": {
      "patterns": [
        "packages/forms/src/**/*"
      ],
      "extensions": "js,scss"
    },
    "build-icons": {
      "patterns": [
        "packages/icons/src/svg/*"
      ],
      "extensions": "svg"
    },
    "build-theme": {
      "patterns": [
        "packages/theme/src/**/*"
      ],
      "extensions": "css,scss"
    },
    "update-icons": {
      "patterns": [
        "packages/icons/src/svg/*"
      ],
      "extensions": "svg"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Talend/ui.git"
  },
  "version": "0.0.0",
  "private": true
}
