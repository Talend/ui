{
  "devDependencies": {
    "commander": "^2.9.0",
    "cpx": "^1.5.0",
    "i18next-parser": "^0.12.0",
    "lerna": "2.5.1",
    "npm-watch": "^0.1.8",
    "surge": "^0.18.0"
  },
  "scripts": {
    "postinstall": "lerna clean --yes && lerna exec -- yarn --pure-lockfile --no-progress --mutex network",
    "update-versions": "node version.js && yarn",
    "build-icons": "lerna exec --scope=@talend/icons -- yarn run prepublish && lerna exec --scope=@talend/react-components -- yarn test -- -u",
    "test": "lerna exec --concurrency 1 -- TZ=Europe/Paris yarn test",
    "test:cov": "lerna exec --concurrency 1 -- TZ=Europe/Paris yarn test:cov",
    "test:demo": "lerna exec -- yarn test:demo",
    "start": "lerna exec -- yarn start",
    "watch": "npm-watch",
    "publish": "lerna publish --force-publish=*",
    "build-storybook": "npm run test:demo && export ACTION='test:demo' && export TRAVIS_BRANCH='master' && export TRAVIS_BUILD_DIR=`pwd` && .travis/after_success_static.sh && .travis/after_success_demo.sh && .travis/after_success_coverage.sh",
    "publish-storybook": "npm run build-storybook && cd .static && surge",
    "changelog": "git log --pretty=\"format:%C(bold green)%ad%C(reset) %<(70,trunc)%s\" --date=short --color",
    "extract-i18n": "npm run extract-i18n-components && npm run extract-i18n-forms",
    "extract-i18n-components": "i18next packages/components/src -r -o i18n/components -n tui-components -l en --write-old false --fileFilter '*.js' --directoryFilter '!__snapshots__'",
    "extract-i18n-forms": "i18next packages/forms/src -r -o i18n/forms -n tui-forms -l en --write-old false --fileFilter '*.js' --directoryFilter '!__snapshots__'"
  },
  "watch": {
    "build-cmf": {
      "patterns": [
        "packages/cmf/src/**/*"
      ],
      "extensions": "js"
    },
    "build-components": {
      "patterns": [
        "packages/components/src/**/*"
      ],
      "extensions": "js,css,scss,svg"
    },
    "build-sagas": {
      "patterns": [
        "packages/sagas/src/**/*"
      ],
      "extensions": "js"
    },
    "build-containers": {
      "patterns": [
        "packages/containers/src/**/*"
      ],
      "extensions": "js,css,scss,svg"
    },
    "build-forms": {
      "patterns": [
        "packages/forms/src/**/*"
      ],
      "extensions": "js,scss"
    },
    "build-icons": {
      "patterns": [
        "packages/icons/src/svg/*"
      ],
      "extensions": "svg"
    },
    "build-logging": {
      "patterns": [
        "packages/logging/src/**/*"
      ],
      "extensions": "js"
    },
    "build-theme": {
      "patterns": [
        "packages/theme/src/**/*"
      ],
      "extensions": "css,scss"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Talend/ui.git"
  },
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/cmf",
    "packages/cmf-cqrs",
    "packages/cmf-webpack-plugin",
    "packages/components",
    "packages/containers",
    "packages/datagrid",
    "packages/forms",
    "packages/generator",
    "packages/icons",
    "packages/logging",
    "packages/sagas",
    "packages/theme"
  ]
}
