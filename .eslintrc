{
    "extends": "airbnb",
    "parser": "babel-eslint",
    "rules": {
        "brace-style": [2, "stroustrup"],
        "indent": ["error", 4],
        "react/prefer-es6-class": 0
    },
    "env": {
        "es6": true,
        "browser": true,
        "jasmine": true,
        "jest": true
    },
    "globals": {
        "beforeEachProviders": true,
        "injectAsync": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    }
}
