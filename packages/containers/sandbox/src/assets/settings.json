{
  "actions": {
    "menu:HeaderBar": {
      "id": "menu:HeaderBar",
      "label": "HeaderBar",
      "icon": "talend-arrow-right",
      "iconTransform": "rotate-270",
      "payload": {
        "type": "MENU_LINK",
        "cmf": {
          "routerReplace": "/HeaderBar"
        }
      }
    },
    "menu:InfiniteScroll": {
      "id": "menu:InfiniteScroll",
      "label": "InfiniteScroll",
      "icon": "talend-refresh",
      "payload": {
        "type": "MENU_LINK",
        "cmf": {
          "routerReplace": "/InfiniteScroll"
        }
      }
    },
    "menu:tacokitTitleMap": {
      "icon": "talend-burger",
      "label": "TCK async",
      "onClickDispatch": {
        "type": "MENU_COMPONENT_FORM_CLICKED",
        "cmf": {
          "routerPush": "/tacokit/titleMap"
        }
      }
    },
    "menu:tacokitValidation": {
      "icon": "talend-burger",
      "label": "TCK validation",
      "onClickDispatch": {
        "type": "MENU_COMPONENT_FORM_CLICKED",
        "cmf": {
          "routerPush": "/tacokit/validation"
        }
      }
    }
  },
  "props": {
    "AppLoader#default": {
      "components": {
        "before-children": [
          {
            "component": "Notification"
          },
          {
            "component": "IconsProvider"
          }
        ]
      }
    },
    "Redirect#default": {
      "path": "/HeaderBar"
    },
    "HeaderBar#default": {
      "keepComponentState": true,
      "logo": {
        "id": "header-bar-demo-logo",
        "icon": "talend-world",
        "isFull": false
      },
      "brand": {
        "id": "header-bar-demo-brand",
        "label": "Choose a product"
      },
      "products": {
        "id": "header-bar-demo-brands",
        "items": [
          {
            "icon": "talend-star",
            "label": "Static menu entry",
            "dispatch": {
              "type": "CUSTOM_ACTION_TYPE",
              "payload": {
                "foo": "bar"
              }
            }
          }
        ]
      },
      "productsUrl": "/api/mock/header-bar/products-list"
    },
    "InfiniteScrollList#usersList": {
      "onLoadMoreRowsActionCreator": "loadUsers",
      "onSortActionCreator": "sortUsers",
      "columns": [
        { "label": "#", "key": "number" },
        { "label": "First name", "key": "firstName" },
        { "label": "Last name", "key": "lastName" }
      ],
      "sortBy": "firstName",
      "sortDirection": "ASC",
      "itemsExpression": {
        "id": "getUsersCollectionAsArray",
        "args": ["users", []]
      },
      "totalRowCountExpression": {
        "id": "cmf.collections.get",
        "args": ["totalUsersCount", 0]
      }
    },
    "SidePanel#default": {
      "actionIds": [
        "menu:HeaderBar",
        "menu:tacokitTitleMap",
        "menu:tacokitValidation",
        "menu:InfiniteScroll"
      ]
    },
    "Layout#default": {
      "mode": "TwoColumns",
      "header": { "component": "HeaderBar" },
      "one": { "component": "SidePanel" },
      "content": {}
    },
    "Layout#HeaderBar": {
      "mode": "TwoColumns",
      "header": { "component": "HeaderBar" },
      "one": { "component": "SidePanel" },
      "content": {}
    },
    "Layout#InfiniteScroll": {
      "mode": "TwoColumns",
      "header": {
        "component": "HeaderBar"
      },
      "one": {
        "component": "SidePanel"
      },
      "content": {
        "component": "InfiniteScrollList",
        "componentId": "usersList"
      }
    },
    "ComponentForm#titleMap": {
      "definitionURL": "/api/v1/forms/titleMap",
      "uiSpecPath": "ui",
      "triggerURL": "/api/v1/application/action",
      "className": "full-form"
    },
    "ComponentForm#validation": {
      "definitionURL": "/api/v1/forms/validation",
      "uiSpecPath": "ui",
      "triggerURL": "/api/v1/application/action",
      "className": "full-form"
    }
  },
  "routes": {
    "path": "/",
    "component": "AppLoader",
    "indexRoute": {
      "component": "Redirect"
    },
    "childRoutes": [
      {
        "path": "HeaderBar",
        "component": "Layout",
        "componentId": "HeaderBar"
      },
      {
        "path": "InfiniteScroll",
        "component": "Layout",
        "componentId": "InfiniteScroll"
      },
      {
        "path": "tacokit",
        "component": "Layout",
        "childRoutes": [
          {
            "path": "validation",
            "component": "ComponentForm",
            "componentId": "validation"
          },
          {
            "path": "titleMap",
            "component": "ComponentForm",
            "componentId": "titleMap"
          }
        ]
      },
      {
        "path": "*",
        "component": "Redirect"
      }
    ]
  }
}
