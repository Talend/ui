{
  "contentTypes": {},
  "actions": {
    "menu:datasets": {
      "id": "menu:datasets",
      "label": "Datasets",
      "icon": "talend-folder",
      "payload": {
        "type": "MENU_LINK",
        "cmf": {
          "routerReplace": "/datasets"
        }
      }
    },
    "menu:datastores": {
      "id": "menu:datastores",
      "label": "Datastores",
      "icon": "talend-datastore",
      "payload": {
        "type": "MENU_LINK",
        "cmf": {
          "routerReplace": "/datastores"
        }
      }
    }
  },
  "props": {
    "indexRouteRedirect": {
      "path": "/datastores"
    },
    "datasets": {
      "didMountActionCreator": "dataset:fetchAll",
      "header": { "_ref": "AppHeaderBar#default" },
      "sidepanel": { "_ref": "SidePanel#default" },
      "list": {
        "collectionId": "datasets",
        "list": {
          "columns": [
            { "key": "id", "label": "ID" },
            { "key": "label", "label": "Name" },
            { "key": "created",  "label": "Created" },
            { "key": "tags", "label": "Tags" }
          ]
        },
        "toolbar": {
          "filter": {
            "placeholder": "Find a dataset"
          },
          "sort": {
            "options": [
              { "id": "label", "name": "Name" },
              { "id": "created", "name": "Created" }
            ]
          }
        },
        "initialState": {
          "sortOn": "label"
        }
      }
    },
    "datastores": {
      "didMountActionCreator": "datastore:fetchAll",
      "header": { "_ref": "AppHeaderBar#default" },
      "sidepanel": { "_ref": "SidePanel#default" },
      "list": {
        "collectionId": "datastores",
        "list": {
          "columns": [
            { "key": "id", "label": "ID" },
            { "key": "label", "label": "Name" },
            { "key": "type",  "label": "Type" },
            { "key": "datasets", "label": "Number of datasets" }
          ]
        },
        "toolbar": {
          "filter": {
            "placeholder": "Find a datastore"
          },
          "sort": {
            "options": [
              { "id": "label", "name": "Name" },
              { "id": "type", "name": "Type" },
              { "id": "datasets", "name": "Number of datasets" }
            ]
          }
        },
        "initialState": {
          "sortOn": "label"
        }
      }
    }
  },
  "routes": {
    "path": "/",
    "component": "App",
    "indexRoute": {
      "component": "Redirect",
      "view": "indexRouteRedirect"
    },
    "childRoutes": [
      {
        "path": "datasets",
        "component": "HomeListView",
        "view": "datasets"
      },
      {
        "path": "datastores",
        "component": "HomeListView",
        "view": "datastores"
      }
    ]
  },
  "ref": {
    "AppHeaderBar#default": {
      "app": "CMF starter"
    },
    "SidePanel#default" : {
      "actionIds": ["menu:datastores", "menu:datasets"]
    }
  }
}
