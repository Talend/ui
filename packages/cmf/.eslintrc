{
	"extends": "airbnb",
	"parser": "babel-eslint",
	"rules": {
		"indent": [2, "tab"],
		"no-tabs": "off",
		"react/forbid-prop-types": [0],
		"react/prefer-es6-class": 0,
		"react/jsx-indent": [2, "tab"],
		"react/jsx-indent-props": [2, "tab"],
		"react/jsx-filename-extension": [1, { "extensions": [".js"] }]
	},
	"env": {
		"es6": true,
		"browser": true,
		"jasmine": true,
		"jest": true
	},
	"globals": {},
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module"
	}
}
