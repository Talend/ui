{
  "extends": "@talend/scripts-config-typescript/tsconfig.json",
  "include": [
    "../../node_modules/cypress",
    "cypress/**/*",
    ".storybook/docs/**/*",
    ".storybook/blocks/**/*",
    "src/**/*",
    "../design-system/src/**/*",
    "custom.d.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~docs": ["src/docs"],
      "~blocks": ["src/blocks"]
    },
    "module": "CommonJs",
    "rootDirs": [".storybook", "cypress", "src"],
    "types": ["cypress"]
  }
}
